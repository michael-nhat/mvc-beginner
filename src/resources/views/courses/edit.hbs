<div class="mt-4">

    <h3>Sửa khóa học</h3>

    <form method="post" action="/courses/store" class="mt-4">
        <div class="form-group">
            <label class="col-sm-2 col-form-label" for="name">Tên khóa học</label>
            <input type="text" class="form-con col-sm-9" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label" for="description">Mô tả khóa học</label>
            <textarea  class="form-con col-sm-9"  id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label" for="videoId">Video ID</label>
            <input type="text" class="form-con col-sm-9" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label" for="level">Trình độ</label>
            <input type="text" class="form-con col-sm-9" value="{{course.level}}" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>